        address to,
        uint256 tokenId,
        bytes memory data
    ) internal virtual {
        _mint(to, tokenId);
        require(
            _checkOnERC4973Received(address(0), to, tokenId, data),
            "ERC4973: transfer to non ERC4973Receiver implementer"
        );
    }

    /**
     * @dev Reverts if the `tokenId` has not been minted yet.
     */
    function _requireMinted(uint256 tokenId) internal view virtual {
        require(_exists(tokenId), "ERC4973: invalid token ID");
    }

