{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "declaration": true,
        "noImplicitAny": false,
        "baseUrl": "./",
        "rootDirs": [
            "./abi",
            "./deploy",
            "./deployments",
            "./scripts",
            "./src",
            "./tests",
            "./typechain"
        ],
        "resolveJsonModule": true
    },
    "exclude": ["dist", "node_modules"],
    "include": ["./scripts", "./test", "./typechain"],
    "files": ["./hardhat.config.ts"]
}
